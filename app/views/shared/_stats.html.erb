<% @user ||= current_user %>
<div class="stats">
	 
	<%= link_to following_user_path(@user), class: "stat", id: "following" do %>
		<strong> <%= @user.followed_users.count %></strong>
		following
	<% end %>
	<%= link_to followers_user_path(@user), class: "stat", id: "followers" do %>
		<strong><%= @user.followers.count %></strong>
		followers
	<% end %>
</div>